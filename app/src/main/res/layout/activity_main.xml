            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="Rsmisa"
            android:layout_height="20dp"

            />
        <TextView

            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="3.5"
            android:layout_height="20dp"

            />
        <TextView

            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="14-2-90"
            android:layout_height="20dp"

            />

    </TableRow>
    <TableRow
        android:id="@+id/ButtonId"
        >
        <Button
            android:layout_column="2"
            android:text="Submit"
            android:textSize="16sp"
            />
        <Button
            android:layout_column="3"
            android:text="Clear"
            android:textSize="16sp"
            />


    </TableRow>
</TableLayout>