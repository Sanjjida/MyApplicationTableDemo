            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="Anika"
            android:layout_height="20dp"

            />
        <TextView

            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="3.9"
            android:layout_height="20dp"

            />
        <TextView

            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="12-2-90"
            android:layout_height="20dp"

            />

    </TableRow>
    <TableRow
        android:id="@+id/Row2Id"

        >
        <TextView

            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="102"
            android:layout_height="20dp"

            />
        <TextView

            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="Nafisa"
            android:layout_height="20dp"

            />
        <TextView

            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="3.0"
            android:layout_height="20dp"

            />
        <TextView

            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="13-2-90"
            android:layout_height="20dp"

            />

    </TableRow>
    <TableRow
        android:id="@+id/Row3Id"

        >
        <TextView

            android:paddingRight="10dp"
            android:textSize="16sp"
            android:text="103"
            android:layout_height="20dp"

            />
